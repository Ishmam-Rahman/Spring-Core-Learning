<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="com.springcore.bean.Student" id="student1">
        <property name="name">
            <value>ishmam</value>
        </property>

        <property name="roll">
            <value>1</value>
        </property>
    </bean>

    <bean class="com.springcore.bean.Student" id="student2">
        <property name="name" value="Taushin"/>
        <property name="roll" value="2"/>
    </bean>

    <bean class="com.springcore.bean.Student" id="student3" p:name="Oyshi" p:roll="3"/>
</beans>